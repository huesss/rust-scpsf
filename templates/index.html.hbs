                }
            }
            function saveFacilityState() {
                const activeZone = document.querySelector('.map-zone.active');
                const activeZoneId = activeZone ? activeZone.getAttribute('data-id') : null;
                
                const containerClasses = [];
                if (mapContainer.classList.contains('alert')) containerClasses.push('alert');
                if (mapContainer.classList.contains('lockdown')) containerClasses.push('lockdown');
                
                const state = {
                    status: statusText.textContent,
                    indicatorClass: statusIndicator.className,
                    containerClasses: containerClasses,
                    activeZoneId: activeZoneId
                };
                
                localStorage.setItem('facilityState', JSON.stringify(state));
            }
            
            const mapPathElement = document.querySelector('.map-path');
            const svgNS = "http://www.w3.org/2000/svg";
            const svg = document.createElementNS(svgNS, "svg");
            svg.setAttribute("width", "100%");
            svg.setAttribute("height", "100%");
            mapPathElement.appendChild(svg);
            
            const connections = [
                { from: 'lab', to: 'containment' },
                { from: 'lab', to: 'control' },
                { from: 'containment', to: 'zone15' },
                { from: 'control', to: 'living' },
                { from: 'control', to: 'containment' }
            ];
            
            function createPaths() {
                while (svg.firstChild) {
                    svg.removeChild(svg.firstChild);
                }
                
                connections.forEach(connection => {
                    const fromZone = document.querySelector(`.map-zone[data-id="${connection.from}"]`);
                    const toZone = document.querySelector(`.map-zone[data-id="${connection.to}"]`);
                    
                    if (fromZone && toZone) {
                        const fromRect = fromZone.getBoundingClientRect();
                        const toRect = toZone.getBoundingClientRect();
                        const containerRect = mapContainer.getBoundingClientRect();
                        
                        const fromX = fromRect.left + (fromRect.width / 2) - containerRect.left;
                        const fromY = fromRect.top + (fromRect.height / 2) - containerRect.top;
                        const toX = toRect.left + (toRect.width / 2) - containerRect.left;
                        const toY = toRect.top + (toRect.height / 2) - containerRect.top;
                        
                        const path = document.createElementNS(svgNS, "path");
                        path.setAttribute("d", `M${fromX},${fromY} L${toX},${toY}`);
                        path.setAttribute("stroke", "rgba(255, 255, 255, 0.1)");
                        path.setAttribute("stroke-width", "2");
                        path.setAttribute("data-from", connection.from);
                        path.setAttribute("data-to", connection.to);
                        path.setAttribute("fill", "none");
                        path.setAttribute("stroke-dasharray", "5,5");
                        svg.appendChild(path);
                    }
                });
            }
            
            window.addEventListener('load', createPaths);
            window.addEventListener('resize', createPaths);
            
            mapZones.forEach(zone => {
                zone.addEventListener('click', function() {
                    const zoneId = this.getAttribute('data-id');
                    
                    mapZones.forEach(z => z.classList.remove('active'));
                    this.classList.add('active');
                    
                    mapInfoPanels.forEach(panel => {
                        if (panel.getAttribute('data-id') === zoneId) {
                            panel.classList.add('active');
                        } else {
                            panel.classList.remove('active');
                        }
                    });
                    
                    const paths = svg.querySelectorAll('path');
                    paths.forEach(path => {
                        const fromId = path.getAttribute('data-from');
                        const toId = path.getAttribute('data-to');
                        
                        if (fromId === zoneId || toId === zoneId) {
                            path.setAttribute("stroke", "var(--primary-color)");
                            path.setAttribute("stroke-width", "3");
                            path.setAttribute("stroke-dasharray", "10,5");
                            path.setAttribute("class", "active");
                        } else {
                            path.setAttribute("stroke", "rgba(255, 255, 255, 0.1)");
                            path.setAttribute("stroke-width", "2");
                            path.setAttribute("stroke-dasharray", "5,5");
                            path.setAttribute("class", "");
                        }
                    });
                    
                    
                    saveFacilityState();
                });
            });
            
            document.querySelectorAll('.map-action-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const action = this.getAttribute('data-action');
                    const zone = this.getAttribute('data-zone');
                    
                    switch(action) {
                        case 'lockdown':
                            mapContainer.classList.add('lockdown');
                            statusIndicator.className = 'status-indicator warning';
                            statusText.textContent = 'Статус комплекса: Карантин активирован';
                            break;
                            
                        case 'alert':
                            mapContainer.classList.add('alert');
                            statusIndicator.className = 'status-indicator alert';
                            statusText.textContent = 'Статус комплекса: Тревога';
                            break;
                            
                        case 'scan':
                            const labZone = document.querySelector('.map-zone[data-id="lab"]');
                            labZone.style.boxShadow = '0 0 30px var(--accent-color)';
                            setTimeout(() => {
                                labZone.style.boxShadow = '';
                                statusText.textContent = 'Статус комплекса: Сканирование завершено';
                                setTimeout(() => {
                                    statusText.textContent = 'Статус комплекса: Нормальный';
                                }, 3000);
                            }, 2000);
                            break;
                            
                        case 'supply':
                            statusText.textContent = 'Статус комплекса: Запрос снабжения отправлен';
                            setTimeout(() => {
                                statusText.textContent = 'Статус комплекса: Нормальный';
                            }, 3000);
                            break;
                            
                        case 'containment-breach':
                            mapContainer.classList.add('alert');
                            statusIndicator.className = 'status-indicator alert';
                            statusText.textContent = 'ВНИМАНИЕ: НАРУШЕНИЕ УСЛОВИЙ СОДЕРЖАНИЯ';
                            
                            mapZones.forEach(z => {
                                z.style.animation = 'pulse 0.5s infinite';
                            });
                            
                            setTimeout(() => {
                                mapContainer.classList.remove('alert');
                                statusIndicator.className = 'status-indicator';
                                statusText.textContent = 'Статус комплекса: Нормальный';
                                mapZones.forEach(z => {
                                    z.style.animation = '';
                                });
                                document.querySelector('.map-zone-5').style.animation = 'pulse 2s infinite';
                            }, 5000);
                            break;
                    }
                    
                    saveFacilityState();
                    
                    if (action !== 'containment-breach') {
                        setTimeout(() => {
                            mapContainer.classList.remove('lockdown', 'alert');
                            statusIndicator.className = 'status-indicator';
                            if (statusText.textContent.includes('Карантин') || 
                                statusText.textContent.includes('Тревога')) {
                                statusText.textContent = 'Статус комплекса: Нормальный';
                            }
                            
                            saveFacilityState();
                        }, 3000);
                    }
                });
            });
            loadFacilityState();
        });
    </script>
