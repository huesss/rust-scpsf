    <script>
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    window.scrollTo({
                        top: target.offsetTop - 80,
                        behavior: 'smooth'
                    });
                }
            });
        });

        window.addEventListener('mousemove', function(e) {
            const shapes = document.querySelectorAll('.shape');
            const x = e.clientX / window.innerWidth;
            const y = e.clientY / window.innerHeight;
            
            shapes.forEach(shape => {
                const speed = shape.classList.contains('shape-1') ? 20 : 
                             shape.classList.contains('shape-2') ? -15 : 10;
                const xOffset = (x - 0.5) * speed;
                const yOffset = (y - 0.5) * speed;
                
                shape.style.transform = `translate(${xOffset}px, ${yOffset}px)`;
            });
        });

        const observerOptions = {
            root: null,
            rootMargin: '0px',
            threshold: 0.1
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('animate-in');
                    observer.unobserve(entry.target);
                }
            });
        }, observerOptions);

        document.querySelectorAll('.character-card, .feature-item, .gallery-item, .requirement-item, .gameplay-feature, .ability').forEach(el => {
            el.classList.add('fade-in');
            observer.observe(el);
        });
        
        // Управление табами для классов
        document.querySelectorAll('.class-tab').forEach(tab => {
            tab.addEventListener('click', function() {
                // Удаляем активный класс у всех табов
                document.querySelectorAll('.class-tab').forEach(t => t.classList.remove('active'));
                // Добавляем активный класс текущему табу
                this.classList.add('active');
                
                // Получаем класс, который нужно показать
                const classType = this.getAttribute('data-class');
                
                // Скрываем все информационные блоки
                document.querySelectorAll('.class-info').forEach(info => info.classList.remove('active'));
                
                // Показываем нужный информационный блок
                const infoToShow = document.getElementById(`${classType}-info`);
                if (infoToShow) {
                    infoToShow.classList.add('active');
                }
            });
        });
        
        // Управление табами для медиа
        document.querySelectorAll('.media-tab').forEach(tab => {
            tab.addEventListener('click', function() {
                // Удаляем активный класс у всех табов
                document.querySelectorAll('.media-tab').forEach(t => t.classList.remove('active'));
                // Добавляем активный класс текущему табу
                this.classList.add('active');
                
                // Получаем тип медиа, который нужно показать
                const mediaType = this.getAttribute('data-tab');
                
                // Скрываем все галереи
                document.querySelectorAll('.media-gallery').forEach(gallery => gallery.classList.remove('active'));
                
                // Показываем нужную галерею
                const galleryToShow = document.getElementById(mediaType);
                if (galleryToShow) {
                    galleryToShow.classList.add('active');
                }
            });
        });
        
        // Обработчик для видео плейсхолдера
        document.querySelector('.video-placeholder').addEventListener('click', function() {
            window.open('https://www.youtube.com/watch?v=dQw4w9WgXcQ', '_blank');
        });
    </script>
